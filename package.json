{
  "name": "showcase_app",
  "version": "1.0.0",
  "description": "Showcase app to show off all your amazing work",
  "private": true,
  "main": "includes/src/js/build.js",
  "scripts": {
    "build:browserify": "browserify ./includes/src/js/build.js -o ./resources/assets/js/bundle.js",
    "build:scss-front": "node-sass   ./includes/src/sass/build-front.scss ./resources/assets/front/css/bundle.css",
    "build:scss-scpanel": "node-sass   ./includes/src/sass/build-scpanel.scss ./resources/assets/sc-panel/css/bundle.css",
    "build:autoprefixer": "postcss ./resources/assets/front/css/* -u autoprefixer -r",
    "build:css": "npm run build:scss-front && npm run build:scss-scpanel && npm run build:autoprefixer",
    "move:installer": "cp ./includes/src/install-temp.php ./install.php",
    "watch:js": "onchange -i -p 100 './includes/src/js/*.js' -- npm run build:browserify",
    "watch:css": "onchange -i -p 100 './includes/src/sass/*.scss' -- npm run build:css",
    "watch:all": "concurrently \"npm run watch:css\" \"npm run watch:js\" \"npm run move:installer\"",
    "postinstall": "npm run watch:all",
    "watch:manual": "npm run build:css && npm run build:browserify",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "author": "Chris Wilkinson",
  "license": "ISC",
  "devDependencies": {
    "@babel/core": "^7.2.2",
    "@babel/preset-env": "^7.3.1",
    "autoprefixer": "^9.4.7",
    "babel-core": "^6.26.3",
    "babel-plugin-transform-decorators-legacy": "^1.3.5",
    "babel-preset-env": "^1.7.0",
    "babel-preset-es2015": "^6.24.1",
    "babelify": "^10.0.0",
    "browserify": "^16.2.3",
    "concurrently": "^4.1.0",
    "node-sass": "^4.11.0",
    "onchange": "^5.2.0",
    "postcss-cli": "^6.1.1"
  },
  "dependencies": {
    "flatpickr": "^4.5.2",
    "font-awesome": "^4.7.0",
    "foundation-sites": "^6.5.3",
    "jquery": "^3.3.1",
    "jquery-ui": "^1.12.1",
    "motion-ui": "^2.0.3",
    "simple-ajax-uploader": "^2.5.5",
    "tinymce": "^5.0.0",
    "vanilla-js-carousel": "^3.1.2",
    "vanilla-picker": "^2.7.2",
    "what-input": "^5.1.3"
  }
}
